#!/bin/bash
# Setup environment for HeightmapRenderer library

export HEIGHTMAP_ROOT="@CMAKE_BINARY_DIR@"
export LD_LIBRARY_PATH="$HEIGHTMAP_ROOT/lib:$LD_LIBRARY_PATH"
export PATH="$HEIGHTMAP_ROOT/bin:$PATH"

echo "HeightmapRenderer environment has been set up"
echo "Library root directory: $HEIGHTMAP_ROOT"
echo ""
echo "You can now run the example programs:"
echo "  cd $HEIGHTMAP_ROOT/bin"
echo "  ./basic_example"
echo ""
echo "Or use the run scripts:"
echo "  $HEIGHTMAP_ROOT/bin/run_basic_example.sh"
echo "  $HEIGHTMAP_ROOT/bin/run_bgfx_example.sh (if built with BGFX)"